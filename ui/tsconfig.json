{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "core-js/es/reflect": [
        "node_modules/core-js/proposals/reflect-metadata",
      ]
    },
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5", //es5
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "esNext",
      "dom"
    ]
  }
}
